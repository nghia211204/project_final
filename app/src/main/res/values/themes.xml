<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.MovieApp" parent="Theme.Material3.DayNight.NoActionBar">
    </style>

    <style name="Theme.MovieApp" parent="Base.Theme.MovieApp" />

    <style name="CustomChipChoice" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_background_color</item>
        <item name="android:textColor">@color/chip_text_color</item>
        <item name="chipCornerRadius">8dp</item>
        <item name="chipStrokeWidth">0dp</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:textColorHint">@android:color/darker_gray</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@android:color/darker_gray</item>
        <item name="colorControlActivated">#FFC107</item>
    </style>

    <style name="LoginTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/text_input_box_stroke</item>
        <item name="hintTextColor">@color/yellow</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
    </style>
</resources>